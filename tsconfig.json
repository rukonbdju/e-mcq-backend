{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "src"
    },
    "exclude": [
        "drizzle.config.ts", // ✅ exclude this file
        "drizzle", // ✅ optional: exclude generated migrations
        "node_modules" // always exclude node_modules
    ]
}